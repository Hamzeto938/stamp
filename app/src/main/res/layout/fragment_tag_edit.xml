<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:animation_wrap_layout="http://schemas.android.com/tools"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardBackgroundColor="#CC5d4037"
                                    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tag_input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/tag_register">

            <EditText
                android:id="@+id/tag_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="New Tag Name"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/tag_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tag_input_layout"
            android:layout_marginStart="40dp"
            android:background="@color/colorPrimary"
            android:text="register"
            android:textColor="@android:color/white"/>

        <com.sjn.taggingplayer.ui.custom.ScrollViewWithMaxHeight
            android:id="@+id/tag_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tag_register"
            android:layout_marginTop="16dp"
            app:maxHeight="240">

            <com.github.sjnyag.AnimationWrapLayout
                android:id="@+id/tag_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                animation_wrap_layout:each_margin_height="4dp"
                animation_wrap_layout:each_margin_width="4dp"/>
        </com.sjn.taggingplayer.ui.custom.ScrollViewWithMaxHeight>

    </RelativeLayout>
</android.support.v7.widget.CardView>