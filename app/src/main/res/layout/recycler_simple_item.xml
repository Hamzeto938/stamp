<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/front_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#242229"
        android:paddingBottom="12dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="12dp">

        <eu.davidea.flipview.FlipView
            android:id="@+id/image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:clickable="true"
            app:animationDuration="170"
            app:checked="false"
            app:enableInitialAnimation="true"
            app:frontBackground="@drawable/square_light"
            app:frontBackgroundColor="@color/color_primary"
            app:rearBackgroundColor="@color/color_accent"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_left"
            android:layout_toEndOf="@id/image"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="?primaryTextSelector"
            tools:text="Title"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/title"
            android:layout_toStartOf="@+id/date"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="?primaryTextSelector"
            tools:text="Subtitle"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?primaryTextSelector"
            tools:text="1900/01/01"/>


    </RelativeLayout>

</FrameLayout>