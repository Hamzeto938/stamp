<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:enabled="true"
        android:icon="@drawable/ic_play_arrow_black_36dp"
        android:shortcutDisabledMessage="@string/shortcut_disable_label_play"
        android:shortcutId="shortcut_play"
        android:shortcutLongLabel="@string/shortcut_long_label_play"
        android:shortcutShortLabel="@string/shortcut_short_label_play">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.sjn.stamp.ui.activity.IntentDispatchActivity"
            android:targetPackage="com.sjn.stamp">
            <extra
                android:name="Shortcut"
                android:value="Play" />
        </intent>
        <categories android:name="android.shortcut.conversation" />

    </shortcut>
</shortcuts>